pipeline {
    agent any

    stages {
        stage('Dependencies') {
            steps {
                sh 'npm i'
                sh 'npm ci'
            }
        }
        stage('Build') {
            steps {
                sh 'npm run test:start-server & sleep 3'
            }
        }
        stage('Test') {
            steps {
                sh 'npm run lint && npm run cy:run'
            }  
        }

    }
}
