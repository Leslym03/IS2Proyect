pipeline {
    agent any

    stages {
        stage('Dependencies') {
            steps {
                sh 'npm init'
                sh 'npm i'
                sh 'npm ci'
            }
        }
        stage('Build') {
            steps {
                sh 'npm run dev'
            }
        }
        stage('Test') {
            steps {
                sh 'npm test'
                sh 'npm run accept'
            }  
        }

    }
}
