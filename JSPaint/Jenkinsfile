pipeline {
    agent any

    stages {
        stage('Dependencies') {
            steps {
                sh 'cd JSPaint && npm i && npm ci'
            }
        }
        stage('Build') {
            steps {
                sh 'cd JSPaint && npm start'
            }
        }
        stage('Test') {
            steps {
                sh 'cd JSPaint && npm test'
                sh 'npm run accept'
            }  
        }

    }
}
