pipeline {
    agent {
        docker {
            image 'node:20-alpine'
        }
    }


    stages {
        stage('Dependencies') {
            steps {
                sh 'npm i'
            }
        }
        stage('Build') {
            steps {
                sh 'npm run make'
            }
        }
        stage('Test') {
            steps {
                sh 'npm run lint'
                sh 'npm test'
            }  
        }

    }
}
