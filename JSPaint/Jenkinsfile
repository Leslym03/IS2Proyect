pipeline {
    agent any
    tools {
    nodejs 'node-10.15.1'
    }
    stages {
        stage('Dependencies') {
            steps {
                sh 'npm i'
            }
        }
        stage('Build') {
            steps {
                sh 'npm run make'
            }
        }
        stage('Test') {
            steps {
                sh 'npm run lint'
                sh 'npm test'
            }  
        }

    }
}
