pipeline {
    agent any
    }
    environment {
        CI = 'true' 
    }

    stages {
        stage('Dependencies') {
            steps {
                sh 'npm i'
            }
        }
        stage('Build') {
            steps {
                sh 'npm run make'
            }
        }
        stage('Test') {
            steps {
                sh 'npm run lint'
                sh 'npm test'
            }  
        }

    }
}
