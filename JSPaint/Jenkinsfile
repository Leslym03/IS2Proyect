pipeline {
    agent {
        docker {
            image 'node:6-alpine'
            args '-p 3000:3000'
        } 
    }
    environment {
        CI = 'true' 
    }

    stages {
        stage('Dependencies') {
            steps {
                sh 'npm i'
            }
        }
        stage('Build') {
            steps {
                sh 'npm run make'
            }
        }
        stage('Test') {
            steps {
                sh 'npm run lint'
                sh 'npm test'
            }  
        }

    }
}
